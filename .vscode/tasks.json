{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build API",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Lint Client",
      "type": "npm",
      "script": "lint",
      "path": "LmsPlusPlus.Client",
      "problemMatcher": [
        "$eslint-stylish"
      ]
    },
    {
      "label": "Run Client",
      "type": "npm",
      "script": "dev",
      "path": "LmsPlusPlus.Client",
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Run TSC",
      "type": "npm",
      "script": "tsc",
      "path": "LmsPlusPlus.Client",
      "problemMatcher": [
        "$tsc",
      ],
      "isBackground": true
    },
    {
      "label": "Run Client with TSC",
      "dependsOn": [
        "Run Client",
        "Run TSC",
      ],
      "problemMatcher": []
    }
  ]
}
