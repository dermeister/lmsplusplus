{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Restore dependencies",
      "type": "shell",
      "command": "npm i --prefix ./LmsPlusPlus.Client && dotnet restore && dotnet tool restore",
      "problemMatcher": []
    },
    {
      "label": "Build API",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run API",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
        "--project",
        "LmsPlusPlus.Api/LmsPlusPlus.Api.csproj"
      ],
      "problemMatcher": [],
    },
    {
      "label": "Run client",
      "type": "npm",
      "script": "dev",
      "path": "LmsPlusPlus.Client",
      "problemMatcher": [],
    },
    {
      "label": "Run application",
      "dependsOn": [
        "Run API",
        "Run client"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run TSC",
      "type": "npm",
      "path": "LmsPlusPlus.Client",
      "script": "tsc",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "Lint client",
      "type": "npm",
      "script": "lint",
      "path": "LmsPlusPlus.Client",
      "problemMatcher": [
        "$eslint-stylish"
      ]
    }
  ]
}
