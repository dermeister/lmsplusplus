{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run Api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
        "--project",
        "LmsPlusPlus.Api/LmsPlusPlus.Api.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "Lint Client",
      "type": "npm",
      "script": "lint",
      "path": "LmsPlusPlus.Client",
      "problemMatcher": [
        "$eslint-stylish"
      ]
    },
    {
      "label": "Run Client",
      "type": "npm",
      "script": "dev",
      "path": "LmsPlusPlus.Client",
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Run App",
      "dependsOn": [
        "Run Api",
        "Run Client"
      ],
      "problemMatcher": []
    }
  ]
}
